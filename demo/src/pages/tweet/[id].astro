---
export const prerender = false;
const { id } = Astro.params;
import Tweet from "astro-tweet";
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout>
  <h1>
    <a
      class="dark:text-pink-500 text-blue-700"
      href="https://github.com/tsriram/astro-tweet"
      target="_blank"
    >
      astro-tweet</a
    > SSR demo
  </h1>
  <Tweet id={id || "20"} />
  <div class="text-sm dark:text-gray-200 text-gray-700">
    This tweet was rendered on the server. Try changing the ID in the URL to see
    a different tweet.
  </div>
</BaseLayout>
